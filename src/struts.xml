            	<param name="root">resultObj</param>  
            </result>  
      	</action>
      	<action name="updateBook" class="action.AdminAction" method="updateBook">  
            <result type="json" >  
            	<param name="root">resultObj</param>  
            </result>  
      	</action>
      	<action name="removeBook" class="action.AdminAction" method="removeBook">  
            <result type="json" >  
            	<param name="root">resultObj</param>  
            </result>  
      	</action>  
